{
  "name": "adam-perfumes-backend",
  "version": "1.0.0",
  "description": "Backend API server for Adam-Perfumes e-commerce ecosystem",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "echo 'No build step required for Node.js'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "deploy": "npm run lint && npm test && node scripts/deploy.js"
  },
  "keywords": [
    "nodejs",
    "express",
    "api",
    "ecommerce",
    "firebase",
    "mysql"
  ],
  "author": "Adam-Perfumes Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.9.2",
    "mysql2": "^3.6.0",
    "sequelize": "^6.32.1",
    "firebase-admin": "^11.10.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.4",
    "nodemailer": "^6.9.4",
    "twilio": "^4.14.0",
    "stripe": "^12.18.0",
    "axios": "^1.4.0",
    "redis": "^4.6.7",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "winston": "^3.10.0",
    "cron": "^2.4.1",
    "socket.io": "^4.7.2",
    "openai": "^3.3.0",
    "moment": "^2.29.4",
    "uuid": "^9.0.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "@types/node": "^20.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}